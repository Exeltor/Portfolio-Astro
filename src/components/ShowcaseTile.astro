---
const { title, image, duration, description, details } = Astro.props
---

<div class="flex flex-row h-36 w-[25vw]">
  <img src={image} alt="Telefonica" class="w-36 rounded-3xl mr-4 object-contain">
  <div class="flex flex-col relative flex-grow">
    <p class="font-bold">{title}</p>
    <p>{duration}</p>
    <p>{description}</p>
    <div class="group absolute bottom-0 right-0 w-12">
      <div class="tk-blob" style="--fill: #000000;">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 319.2 356.7">
          <path d="M271.9 50.3c30.6 29.3 51.3 75.5 46.6 123.9-4.6 48.4-34.6 99-86.5 136.3s-125.6 61.4-168.3 35.3S9.4 243.5 3.4 177.3C-2.7 111.2-3.1 55.2 24 26.7 51.1-1.9 105.9-2.9 153.4 2.8c47.6 5.8 88 18.2 118.5 47.5z"></path>
        </svg>
      </div>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 absolute top-2 left-2 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div class="absolute bottom-0 right-0 hidden group-hover:block shadow rounded-3xl bg-black text-white p-5 pl-10 w-[30vw]">
        <ul class="list-disc">
          {details.map((detail, index) => (
            index < details.length
            ? <li>{detail}</li><br />
            : <li>{detail}</li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</div>