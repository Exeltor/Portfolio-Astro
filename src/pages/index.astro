---
import BaseLayout from '../layouts/BaseLayout.astro'
---
<BaseLayout>
	<div class="grid grid-cols-3 content-center p-20 flex-grow">
			<div class="col-span-2 border-r-2 border-black flex flex-col justify-center bg-white z-[-1]">
				<div class="py-10 relative">
					<div class="absolute top-0 left-0 mt-[-10vw] w-[30vw]">
						<div class="tk-blob" style="--fill: #000000;">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 317.5 353.7">
								<path d="M291.8 55.3c30.4 39.9 30.7 102 17 160.4-13.8 58.3-41.6 112.9-84 130.9s-99.3-.6-137-30C50.2 287.1 32 246.9 17 200.5 2.1 154.1-9.6 101.4 11.5 63.6 32.6 25.8 86.6 2.8 143.8.2c57.2-2.6 117.6 15.2 148 55.1z"></path>
							</svg>
						</div>
					</div>
					<p class="text-3xl text-white mix-blend-difference">Hi! My name is</p>
					<h1 class="text-7xl font-bold text-white mix-blend-difference">Alexey Zhelezov</h1>
				</div>
				<p class="mix-blend-difference text-white">Cybersecurity student + FullStack Engineer</p>
			</div>
			<div class="px-8 font-medium">
				<a href="/education" class="group flex flex-row items-center hover:bg-black rounded-3xl p-4">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14 mr-14 text-black group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path d="M12 14l9-5-9-5-9 5 9 5z" />
						<path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
					</svg>
					<p class="group-hover:text-white">Education</p>
				</a>
				<div class="group flex flex-row items-center hover:bg-black rounded-3xl p-4">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14 mr-14 text-black group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
					</svg>
					<p class="group-hover:text-white">Work Experience</p>
				</div>
				<div class="group flex flex-row items-center hover:bg-black rounded-3xl p-4">
					 <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14 mr-14 text-black group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
					</svg>
					<p class="group-hover:text-white">Skills</p>
				</div>
			</div>
		</div>
