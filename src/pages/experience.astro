---
import BaseLayout from '../layouts/BaseLayout.astro'

---

<BaseLayout>
  <div class="flex-grow p-20">
    <p class="text-center font-bold text-4xl mb-24">My Experience</p>
    <div class="grid grid-cols-2 content-center justify-items-center gap-24 ">
      <div class="flex flex-row h-36 w-[25vw]">
        <img src="/assets/telefonica.jpeg" alt="Telefonica" class="w-36 rounded-3xl mr-4">
        <div class="flex flex-col relative flex-grow">
          <p class="font-bold">Telef√≥nica</p>
          <p>May 2021 - May 2022</p>
          <p>Software Engineering Internship</p>
          <div class="group absolute bottom-0 right-0 w-12">
            <div class="tk-blob" style="--fill: #000000;">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 319.2 356.7">
                <path d="M271.9 50.3c30.6 29.3 51.3 75.5 46.6 123.9-4.6 48.4-34.6 99-86.5 136.3s-125.6 61.4-168.3 35.3S9.4 243.5 3.4 177.3C-2.7 111.2-3.1 55.2 24 26.7 51.1-1.9 105.9-2.9 153.4 2.8c47.6 5.8 88 18.2 118.5 47.5z"></path>
